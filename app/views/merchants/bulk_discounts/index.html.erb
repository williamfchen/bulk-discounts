<h1><center><%= @merchant.name %> Bulk Discounts</center></h1>
<center><table class="table-style">
<caption>Discounts</caption>
  <thead>
    <tr>
      <th>Discount Percentage</th>
      <th>Quantity Threshold</th>
      <th>View Discount</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% @bulk_discounts.each do |discount| %>
      <tr id="discount-<%= discount.id %>">
        <td><center><%= discount.percentage_discount %>%</center></td>
        <td><center><%= discount.quantity_threshold %><c/enter></td>
        <td><center><%= link_to 'Show', "/merchants/#{@merchant.id}/bulk_discounts/#{discount.id}" %></center></td>
        <td><center><%= button_to 'Delete', "/merchants/#{@merchant.id}/bulk_discounts/#{discount.id}", method: :delete %></center></td>
      </tr>
    <% end %>
  </tbody>
</table></center>

<center><%= button_to 'Create New Discount', new_merchant_bulk_discount_path(@merchant), method: :get %></center>